{
  "name": "@ama-team/projection-framework",
  "version": "0.1.0",
  "main": "dist/index.js",
  "repository": "git@github.com:ama-team/js-projection-framework.git",
  "author": "AMA Team <dev@amagroup.ru>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "lint": "tslint --project .",
    "test": "nyc mocha",
    "test:coverage:report": "nyc report --reporter=lcov",
    "test:coverage:publish": "[ ! -s build/report/coverage/lcov.info ] || ( cat build/report/coverage/lcov.info | coveralls )"
  },
  "files": [
    "dist/**/*.js",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/expect": "^1.20.2",
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.1",
    "mocha-allure-reporter": "^1.3.2",
    "nyc": "^11.4.1",
    "source-map-support": "^0.5.3",
    "ts-mocha": "^1.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "cache": true,
    "report-dir": "build/report/coverage",
    "temp-directory": "build/metadata/coverage"
  }
}
